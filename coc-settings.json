{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "h", "cxx", "cc", "hpp", "hh"],
      "rootPatterns": [".ccls", ".git/"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        }
      }
    },
    "rust": {  
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"],
      "trace": "verbose",
      "settings": {
        "rust-analyzer": {

        }
      }
    }
  }
}
